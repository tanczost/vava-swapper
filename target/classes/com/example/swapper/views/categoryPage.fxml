<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="576.0" prefWidth="1024.0" styleClass="anchor" stylesheets="@style/login.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.CategoryPageController">
    <children>
        <AnchorPane layoutX="34.0" layoutY="14.0" prefHeight="94.0" prefWidth="956.0" style="-fx-background-color: white; -fx-border-color: black; -fx-background-radius: 22px; -fx-border-radius: 20px; -fx-border-width: 4px;">
            <children>
                <ImageView fitHeight="58.0" fitWidth="63.0" layoutX="22.0" layoutY="18.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@images/homeLogo.png" />
                    </image>
                </ImageView>
                <TextField fx:id="tfSearch" alignment="CENTER" focusTraversable="false" layoutX="375.0" layoutY="32.0" prefHeight="29.0" prefWidth="206.0" promptText="Search for product" />
                <Button fx:id="btnAddProduct" layoutX="693.0" layoutY="22.0" mnemonicParsing="false" onMouseClicked="#loadAddProductPage" prefHeight="46.0" prefWidth="170.0" text="Add product" textAlignment="CENTER" textFill="#0000c8" visible="false">
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                </Button>
                <Button fx:id="btnLogin" layoutX="693.0" layoutY="22.0" mnemonicParsing="false" onMouseClicked="#redirectToLogin" prefHeight="46.0" prefWidth="170.0" textFill="#0000c8" visible="false">
                </Button>
                <ImageView fx:id="ivAvatar" fitHeight="58.0" fitWidth="63.0" layoutX="875.0" layoutY="17.0" onMouseClicked="#redirectToProposalPage" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@images/avatar.png" />
                    </image>
                </ImageView>
                <ImageView fitHeight="18.0" fitWidth="20.0" layoutX="382.0" layoutY="38.0" onMouseClicked="#searchForProduct" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@images/lupa.png" />
                    </image>
                </ImageView>
                <ImageView fitHeight="18.0" fitWidth="20.0" layoutX="554.0" layoutY="38.0" onMouseClicked="#clearSearch" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@images/cancel.png" />
                    </image>
                </ImageView>
              <Button layoutX="90.0" layoutY="22.0" mnemonicParsing="false" onAction="#backMain" prefHeight="46.0" prefWidth="170.0" text="BACK" textFill="#0000c8" />
            </children>
        </AnchorPane>
        <AnchorPane layoutX="34.0" layoutY="115.0" prefHeight="450.0" prefWidth="960.0" style="-fx-background-color: white; -fx-border-color: black; -fx-background-radius: 22px; -fx-border-radius: 20px; -fx-border-width: 4px;">
            <children>
                <Button layoutX="792.0" layoutY="13.0" mnemonicParsing="false" onAction="#redirectToFilterPage" prefHeight="46.0" prefWidth="143.0" text="FILTER" textAlignment="CENTER" textFill="#0000c8" />
                <Label fx:id="lbSort" alignment="CENTER" contentDisplay="CENTER" layoutX="115.0" layoutY="19.0" pickOnBounds="true" prefHeight="36.0" prefWidth="260.0" textAlignment="CENTER" />
                <ImageView fx:id="upvote" fitHeight="48.0" fitWidth="51.0" layoutX="186.0" layoutY="62.0" onMouseClicked="#setDateASC" onMouseEntered="#changeHighlight" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@images/upvote.png" />
                    </image>
                </ImageView>
                <ImageView fx:id="downvote" fitHeight="48.0" fitWidth="58.0" layoutX="245.0" layoutY="62.0" onMouseClicked="#setDateDESC" onMouseEntered="#changeHighlight" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@images/downvote.png" />
                    </image>
                </ImageView>
                <ListView fx:id="lwCategoryItems" layoutX="125.0" layoutY="118.0" onMouseClicked="#offerSelected" prefHeight="312.0" prefWidth="710.0" style="-fx-background-color: white; -fx-border-color: black; -fx-border-width: 2px;" />
              <ImageView fx:id="categories" fitHeight="102.0" fitWidth="244.0" layoutX="399.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true" />
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
