<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.effect.Bloom?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<VBox alignment="CENTER" prefHeight="554.0" prefWidth="1024.0" spacing="20.0" stylesheets="@style/global.css"
      xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.swapper.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <AnchorPane fx:id="LoginController" prefHeight="454.0" prefWidth="1024.0">
        <children>
            <AnchorPane layoutY="14.0" prefHeight="387.0" prefWidth="1024.0">
                <children>
                    <TextField fx:id="tfNickname" layoutX="412.0" layoutY="95.0" prefHeight="40.0" prefWidth="271.0"/>
                    <Label fx:id="lbNickname" layoutX="412.0" layoutY="52.0" prefHeight="36.0" prefWidth="177.0"
                           stylesheets="@style/global.css">
                    </Label>
                    <Label fx:id="lbPassword" layoutX="412.0" layoutY="149.0">
                    </Label>
                    <Label fx:id="lError" layoutX="432.0" layoutY="230.0" style="-fx-text-fill: red">
                    </Label>
                    <PasswordField fx:id="pfPassword" layoutX="412.0" layoutY="185.0" prefHeight="40.0"
                                   prefWidth="271.0">
                        <effect>
                            <Bloom/>
                        </effect>
                    </PasswordField>
                    <Button fx:id="btnLogIn" layoutX="438.0" layoutY="260.0" minWidth="220.0" mnemonicParsing="false"
                            onAction="#login" scaleShape="false" textAlignment="CENTER">
                    </Button>
                    <Button fx:id="btnNoAccount" layoutX="438.0" layoutY="320.0" minWidth="220.0"
                            mnemonicParsing="false" onAction="#register">
                        <cursor>
                            <Cursor fx:constant="DEFAULT"/>
                        </cursor>
                    </Button>
                </children>
            </AnchorPane>
            <Button layoutX="439.0" layoutY="401.0" mnemonicParsing="false" prefHeight="39.0" prefWidth="220.0"
                    fx:id="btnMainPage"
                    onAction="#navigateToMainPage"/>
        </children>
    </AnchorPane>
</VBox>
