<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.effect.Bloom?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<VBox alignment="CENTER" prefHeight="554.0" prefWidth="1024.0" spacing="20.0" stylesheets="@style/global.css"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.swapper.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <AnchorPane fx:id="LoginController" prefHeight="454.0" prefWidth="1024.0">
        <children>
            <AnchorPane layoutY="14.0" prefHeight="387.0" prefWidth="1024.0">
                <children>
                    <TextField fx:id="tfUsername" layoutX="412.0" layoutY="95.0" prefHeight="40.0" prefWidth="271.0"/>
                    <Label layoutX="412.0" layoutY="52.0" prefHeight="36.0" prefWidth="177.0"
                           stylesheets="@style/global.css" text="USERNAME">
                    </Label>
                    <Label layoutX="412.0" layoutY="149.0" text="PASSWORD">
                    </Label>
                    <Label fx:id="lError" style="-fx-text-fill: red" layoutX="432.0" layoutY="230.0">
                    </Label>
                    <PasswordField fx:id="pfPassword" layoutX="412.0" layoutY="185.0" prefHeight="40.0"
                                   prefWidth="271.0">
                        <effect>
                            <Bloom/>
                        </effect>
                    </PasswordField>
                    <Button layoutX="507.0" layoutY="261.0" mnemonicParsing="false" onAction="#login" scaleShape="false"
                            text="Log in" textAlignment="CENTER">
                    </Button>
                    <Button layoutX="441.0" layoutY="320.0" mnemonicParsing="false" onAction="#register"
                            text="Don't have an accout?">
                        <cursor>
                            <Cursor fx:constant="DEFAULT"/>
                        </cursor>
                    </Button>
                </children>
            </AnchorPane>
        </children>
    </AnchorPane>
</VBox>
